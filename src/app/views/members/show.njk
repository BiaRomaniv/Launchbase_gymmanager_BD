{% extends "layout.njk" %} {% block content %}
<div class="card">
    <section class="avatar" style="background:no-repeat center/cover url({{member.avatar_url}});"></section>


    <section class="details">
        <h3>Detalhes</h3>
        <div class="item">
            <div>Nome</div>
            <div>{{member.name}}</div>
        </div>
        <div class="item">
            <div>Aniversário</div>
            <div>{{member.birth}}</div>
        </div>
        <div class="item">
            <div>Sexo</div>
            <!-- alterar o genero para escrever masculinoe feminino, não só M e F-->
            <div>{{"Masculino" if member.gender == "M" else "Feminino"}}</div>
        </div>
        <div class="item">
            <div>E-mail</div>
            <div>{{member.email}}</div>
        </div>
        <div class="item">
            <div>Tipo Sanguíneo</div>
            <div>{{member.blood}}</div>
        </div>
        <div class="item">
            <div>Peso (kg)</div>
            <div>{{member.weight}}</div>
        </div>
        <div class="item">
            <div>Altura</div>
            <div>{{member.height}}</div>
        </div>
        <div class="item">
            <div>Desde</div>
            <div>{{member.created_at}}</div>
        </div>
        <a href="/members/{{member.id}}/edit" class="button">Editar</a>
    </section>
</div>

{% endblock %}